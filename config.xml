<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="mx.gasu.app" version="1.0.0">
    <name>GasU</name>
    <description>
        Aplicacion para leer medidores de gas
    </description>
    <author email="holivas@gasu.mx" href="http://gasu.mx">
        PID Electronics
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    
    <platform name="android">
        <allow-intent href="market:*"/>        
        <icon src="res/android/icon.png" platform="android" width="57" height="57" />
        <splash src="res/android/logo_cel_480_800_.png" density="port-hdpi"/>
        <splash src="res/android/logo_cel_240_320_.png" density="port-ldpi"/>
        <splash src="res/android/logo_cel_320_480_.png" density="port-mdpi"/>
        <splash src="res/android/logo_cel_640_960_.png" density="port-xhdpi"/>
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="orientation" value="portrait" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>